<html>
<head></head>
<body>
<h1><%= image_tag ("/Icon_Dir.png", :size=>"64x64", :alt=>"directory") %><%= @name %></h1>
<table>
<tr>
<th></th>
<th>作成日時</th>
<th>変更日時</th>
<th>データサイズ</th>
<th>MIME</th>
</tr>
<% @datas.each do |d| %>
<tr>
<td><a href="<%= d[:href] %>">
<% if d[:prop][:resourcetype] %>
<%= image_tag ("/Icon_Dir.png", :size=>"32x32", :alt=>"directory") %>
<% else %>
<%= image_tag ("/Icon_File.png", :size=>"32x32", :alt=>"file") %>
<% end %>
<%= d[:prop][:displayname] %></a></td>
<td><%= Time.parse(d[:prop][:creationdate]).strftime("%Y年%m月%d日 %H時%M分%S秒") %></td>
<td><%= Time.parse(d[:prop][:getlastmodified]).strftime("%Y年%m月%d日 %H時%M分%S秒") %></td>
<td><%= d[:prop][:getcontentlength] %></td>
<td><%= d[:prop][:getcontenttype] %></td>
</tr>
<% end %>
</table>
</body>
</html>
